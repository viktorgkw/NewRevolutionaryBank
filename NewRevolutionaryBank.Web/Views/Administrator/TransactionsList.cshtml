@model List<TransactionDisplayViewModel>
@{
	ViewData["Title"] = "All Transactions";
}

<div class="text-center">
	<div>
		<h1 class="display-4 text-dark fw-bold py-3">@ViewData["Title"]</h1>
		<hr />
		<br />
	</div>

	<div class="fw-bold border border-dark rounded p-4 mb-5 bg-dark" style="overflow-x: auto;">
		<p class="fs-3 text-white">Transactions are ordered by newest!</p>
		@if (Model.Count > 0)
		{
			<table class="table table-light table-hover table-responsive">
				<thead>
					<tr>
						<th>Amount</th>
						<th>Date</th>
						<th>Description</th>
						<th>From</th>
						<th>To</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var transaction in Model)
					{
						<tr class="text-info">
							<td>@transaction.Amount</td>
							<td>@transaction.TransactionDate</td>
							<td>@transaction.Description</td>
							<td>@transaction.AccountFromUsername</td>
							<td>@transaction.AccountToUsername</td>
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<p class="text-light fw-bold fs-5">No transactions yet!</p>
		}
	</div>
</div>