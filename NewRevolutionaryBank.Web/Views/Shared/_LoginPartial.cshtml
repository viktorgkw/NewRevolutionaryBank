@if (User.Identity?.IsAuthenticated ?? false)
{
	<li class="dropdown">
		<a class="btn btn-close-white dropdown-toggle fw-bold"
		   href="#"
		   role="button"
		   id="dropdownProfile"
		   data-bs-toggle="dropdown"
		   aria-expanded="false">
			Profile
		</a>

		<ul class="dropdown-menu dropdown-menu-end bg-dark"
			aria-labelledby="dropdownProfile">
			<li class="py-2">
				<a class="nav-link text-white fw-bold"
				   asp-area="Identity"
				   asp-page="/Account/Manage/Index"
				   title="Manage">
					Settings
				</a>
			</li>
			<li class="py-2">
				<a class="nav-link text-white fw-bold"
				   asp-area="Identity"
				   asp-page="/Account/Logout">
					Logout
				</a>
			</li>
		</ul>
	</li>
}
else
{
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link text-white fw-bold"
			   asp-area="Identity"
			   asp-page="/Account/Register">Join us!</a>
		</li>
	</ul>
}
