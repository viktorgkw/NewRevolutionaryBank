@model BankAccountCreateViewModel
@{
	ViewData["Title"] = "Create Bank Account";
}

<div class="text-center">
	<div>
		<h1 class="display-4 text-secondary fw-bold text-dark py-3">
			Create
			<span class="text-info">Bank Account</span>!
		</h1>
		<hr />
		<br />
	</div>

	<form method="post">
		<div class="form-group mb-3">
			<label asp-for="UnifiedCivilNumber"
				   class="fw-bold fs-5">Unified Civil Number</label>
			<input asp-for="UnifiedCivilNumber"
				   type="text"
				   class="form-control"
				   aria-required="true"
				   minlength="10"
				   maxlength="10"
				   placeholder="Your Unified Civil Number" />
			<span asp-validation-for="UnifiedCivilNumber" class="text-danger"></span>
		</div>

		<div class="form-group mb-3">
			<label asp-for="Address" class="fw-bold fs-5">Address</label>
			<input asp-for="Address"
				   type="text"
				   class="form-control"
				   aria-required="true"
				   minlength="8"
				   maxlength="40"
				   placeholder="Your Address" />
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>

		<button type="submit"
				class="btn btn-info text-white fw-bold">
			Create
		</button>
	</form>
</div>