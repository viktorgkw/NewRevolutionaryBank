@model Guid
@{
	ViewData["Title"] = "Close Account";
}

<div class="text-center">
	<div>
		<h1 class="display-4 text-dark fw-bold py-3">@ViewData["Title"]</h1>
		<hr />
		<br />
	</div>

	<div class="fw-bold border border-dark rounded p-4 mb-5 bg-dark">
		<p class="fs-2 text-danger">Are you sure you want to delete this bank account?</p>
		<a class="fw-bold btn btn-outline-danger text-white w-100 fs-5"
		   asp-action="CloseConfirmation"
		   asp-route-id="@Model">
			DELETE
		</a>
	</div>
</div>